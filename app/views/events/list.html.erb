<div class="container">
	<h1 class="page-header">Edit Events </h1> 

	<table class="table">
		<tr>
			<th>Poster</th>
			<th>Title</th>
			<th>Time</th>
			<th>Location</th>
			<th colspan="3">Edit</th>
		</tr>
		<% @events.each do |event| %>
		<tr>
			<td><%= image_tag event.poster.url(:thumb) %></td>
			<td><%= getTitle(event.title) %></td>
			<td><%= getTimeString(event.time, event.end_time) %></td>
			<td><%= getLocation(event.location) %></td>
			<td><%= link_to 'Show', event %></td>
        	<td><%= link_to 'Edit', edit_event_path(event) %></td>
        	<td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</table>
	<%= link_to 'New Event', new_event_path %>
</div>